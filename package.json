{
  "name": "ts-prompt",
  "version": "0.1.0",
  "description": "Typesafe prompt construction for LLM inference with zod-parsed results",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./openai": "./src/openai/index.js"
  },
  "types": "./src/index.ts",
  "publishConfig": {
    "exports": {
      ".": "./dist/index.js",
      "./openai": "./dist/openai/index.js"
    },
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "test": "vitest run",
    "lint": "biome check ./src",
    "lint:fix": "biome check --apply ./src"
  },
  "tsup": {
    "entry": ["src/index.ts"],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "dependencies": {
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.1",
    "@types/node": "^18.14.0",
    "openai": "^4.29.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@8.15.8"
}
