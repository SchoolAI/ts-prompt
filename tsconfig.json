{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "target": "es2022",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "nodenext",
    "noEmit": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
